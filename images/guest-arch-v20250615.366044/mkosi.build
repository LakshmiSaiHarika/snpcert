#!/bin/bash

set -xeu

# Update /etc/resolv.conf with the resolv.conf from 'systemd' upstream
resolv_conf_link="https://raw.githubusercontent.com/systemd/systemd/refs/heads/main/src/resolve/resolv.conf"

mkdir -p "${DESTDIR}"/etc

curl -L -o "${DESTDIR}/etc/resolv.conf" \
  ${resolv_conf_link}

echo -e "\n" >> "${DESTDIR}/etc/resolv.conf"
echo -e "nameserver 10.218.15.1" >> "${DESTDIR}/etc/resolv.conf" 
